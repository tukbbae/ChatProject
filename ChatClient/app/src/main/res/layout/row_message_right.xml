<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_date_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#d7d7d2" />

        <TextView
            android:id="@+id/message_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/app_name"
            android:textColor="#7d95cd"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#d7d7d2" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/message_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/fail_mark"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/message_bubble_layout"
            android:layout_marginRight="3dp"
            android:src="@drawable/x_icon" />

        <LinearLayout
            android:id="@+id/message_bubble_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/fail_mark"
            android:background="@drawable/selector_message_bubble_right"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/message_attachment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/message_bubble_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:maxWidth="300dp"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/message_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="15dp"
        android:text="@string/app_name"
        android:textColor="#7c7c77"
        android:textSize="12sp" />

</LinearLayout>